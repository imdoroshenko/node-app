{
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "modules": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "mongo": true,
    "mocha": true
  },
  "rules": {
    "curly": 2,
    "quotes"           : [2, "single"],
    "consistent-return": 2,
    "indent"           : [1, 2],
    "no-else-return"   : 1,
    "semi"             : [2, "never"],
    "space-unary-ops"  : 2,
    "eol-last"         : [2, "always"],
    "no-console"       : 0,
    "no-var"           : 2
  }
}